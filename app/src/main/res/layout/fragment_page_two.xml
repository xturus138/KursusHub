<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="24dp"
    android:background="@drawable/onboarding_bg"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/two_bg"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare & Enroll Easily"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blueText"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textDescriptionOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Find the best course for you through reviews, filters, and digital certificates â€” all in one place."
        android:textSize="12sp"
        android:textStyle="normal"
        android:fontFamily="@font/poppins"
        android:textColor="@color/grayText"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textTitleTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/blueButton"
        app:cornerRadius="24dp"
        app:iconGravity="textStart"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textDescriptionOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
